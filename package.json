{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:prod": "docker-compose up app",
    "docker:run": "docker run -p 3000:3000 portfolio:latest",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yaml,yml}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "cross-env PORT=3000 HOSTNAME=0.0.0.0 NODE_ENV=production pnpm dlx tsx scripts/start-standalone.ts",
    "type-check": "tsc --noEmit",
    "i18n-check": "i18n-check --unused src/ -f next-intl --source en --locales messages || echo \"::warning::i18n-check found issues (non-blocking)\"",
    "analyze": "cross-env NEXT_IGNORE_TURBOPACK=true ANALYZE=true next build --webpack",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage --reporter=dot",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@octokit/rest": "^22.0.1",
    "@radix-ui/react-accordion": "1.2.12",
