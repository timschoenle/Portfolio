{
  "name": "portfolio",
  "version": "1.7.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm build:prepare && next build --webpack",
    "build:prepare": "pnpm build:resume",
    "build:resume": "pnpm dlx tsx scripts/generate-resumes.ts",
    "dev": "pnpm build:prepare && next dev  --webpack",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:prod": "docker-compose up app",
    "docker:run": "docker run -p 3000:3000 portfolio:latest",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yaml,yml}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:deps": "knip",
    "lint:deps:fix": "knip --fix",
    "lint:secrets": "gitleaks detect --redact --report-format json --report-path secrets-report.json",
    "license-check": "tsx scripts/check-licenses.ts",
    "generate-resumes": "tsx scripts/generate-resumes.ts",
    "dep-cruise": "depcruise src --include-only \"src\" --config .dependency-cruiser.js --output-type err-long",
    "start": "cross-env PORT=3000 HOSTNAME=0.0.0.0 NODE_ENV=production pnpm dlx tsx scripts/start-standalone.ts",
    "type-check": "tsc --noEmit",
    "i18n-check": "i18n-check --unused src/ -f next-intl --source en --locales messages || echo \"::warning::i18n-check found issues (non-blocking)\"",
    "analyze": "cross-env NEXT_IGNORE_TURBOPACK=true ANALYZE=true next build --webpack",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=dot",
    "sbom": "cdxgen -o sbom.xml",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "prepare": "husky"
  },
  "dependencies": {
    "@octokit/rest": "22.0.1",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-slot": "latest",
    "@serwist/next": "9.2.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "latest",
    "lucide-react": "0.561.0",
    "next": "16.0.10",
    "next-intl": "latest",
    "pino": "^10.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "7.68.0",
    "server-only": "0.0.1",
    "sonner": "latest",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/types": "latest",
    "@cyclonedx/cdxgen": "12.0.0",
    "@lingual/i18n-check": "latest",
    "@next/bundle-analyzer": "16.0.10",
    "@next/eslint-plugin-next": "16.0.10",
    "@playwright/test": "1.57.0",
    "@react-pdf/renderer": "4.3.1",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@types/node": "24.10.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/webpack": "5.28.5",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "babel-plugin-react-compiler": "1.0.0",
    "cross-env": "10.1.0",
    "dependency-cruiser": "17.3.4",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-no-secrets": "2.2.1",
    "eslint-plugin-no-unsanitized": "4.1.4",
    "eslint-plugin-perfectionist": "5.0.0",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jsdom": "27.3.0",
    "knip": "5.75.1",
    "license-checker-rseidelsohn": "4.4.2",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "serwist": "9.2.3",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "vite-tsconfig-paths": "6.0.2",
    "vitest": "4.0.16"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Edge versions",
      "Safari >= 16.4",
      "iOS >= 16.4",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nextBundleAnalysis": {
    "showDetails": true,
    "buildOutputDirectory": ".next",
    "budget": 358400,
    "budgetPercentIncreaseRed": 10,
    "minimumChangeThreshold": 500,
    "alwaysShowGzipDiff": true,
    "skipCommentIfEmpty": false
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@appthreat/sqlite3",
      "@next/swc",
      "@parcel/watcher",
      "esbuild",
      "husky",
      "libxmljs2",
      "playwright",
      "sharp"
    ]
  }
}
