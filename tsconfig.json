/* eslint-disable jsonc/sort-keys */
{
  "compilerOptions": {
    // ======================================================================
    // Language & Environment
    // ======================================================================
    "target": "ES2022", // Modern JS target
    "module": "ESNext", // Keep ESNext modules for tree-shaking
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowJs": false, // Only TypeScript files allowed for stricter typing
    "checkJs": false, // No JS checking
    "jsx": "react-jsx",

    // ======================================================================
    // Type Safety - Core
    // ======================================================================
    "strict": true, // Enable all strict checks
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,

    // ======================================================================
    // Type Safety - Advanced
    // ======================================================================
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true, // Prevent undefined sneaking in optional properties
    "verbatimModuleSyntax": true, // Preserve type-only imports for stricter checking

    // ======================================================================
    // Interoperability
    // ======================================================================
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,

    // ======================================================================
    // Build & Performance
    // ======================================================================
    "skipLibCheck": false, // Enforce library type checks for maximum safety
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,

    // ======================================================================
    // Module Path Aliases
    // ======================================================================
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"]
    },

    // ======================================================================
    // Plugins
    // ======================================================================
    "plugins": [{ "name": "next" }]
  },

  // ======================================================================
  // Include/Exclude
  // ======================================================================
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.e2e.ts", ".next"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ]
}
